@model IEnumerable<SilverScreenReviews.Models.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>
@if (!Model.Any())
{
    <p>No registered users.</p>
}
else
{
    <table id="users" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>User</th>
                <th>Membership Type</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@Html.ActionLink(user.Name, "Edit", "Users", new { id = user.Id }, null)</td>
                    <td>@(user.premiumStatus == true ? "Premium member" : "Regular member")</td>
                    <td><button data-user-id="@user.Id" class="btn-link js-delete">Delete</button></td>
                </tr>
            }
            <button type="submit" class="btn btn-primary" onclick="location.href='@Url.Action("New", "Users")'">Register new user</button>
        </tbody>
    </table>
}
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#users").on("click", ".js-delete", function () {
                var button = $(this);
                if (confirm("Are you sure you want to delete this customer?")) {
                    $.ajax({
                        url: "/api/users/" + button.attr("data-user-id"), 
                        method: "DELETE",
                        success: function () {
                            button.parents("tr").remove();
                        }
                    })
                }
            });
        });
    </script>
}